{
  "compilerOptions": {
    "baseUrl": "./src",
    "esModuleInterop": true,
    "sourceMap": true,
    "inlineSourceMap": true,
    "jsx": "react",
    "strict": true,
    "allowJs": true,
    // Provide full support for iterables in for..of, spread and destructuring when targeting ES5 or ES3.
    "downlevelIteration": true,
    "lib": [      
      "es2017",
      "dom"
    ],
    "types": [
      "node"
    ],
    "paths": {
      "~/*": ["./*"],
      "src/*": ["./kibana/src/*"],
      "kibana/public": ["./kibana/src/core/public"],
      "kibana/server": ["./kibana/src/core/server"],
      "@kbn/i18n": ["./mocks/@kbn-i18n"],
      "@kbn/i18n/*": ["./mocks/@kbn-i18n/*"]
    }
  },
  
  "exclude" : ["node_modules", "src/**/*.test.ts"]
}
