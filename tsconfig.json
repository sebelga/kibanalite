{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "jsx": "react",
    "strict": true,
    "lib": [      
      "es2017",
      "dom"
    ],
    "types": [
      "node"
    ],
    "paths": {
      "~/*": ["./*"],
      "src/*": ["./src/client/kibana/src/*"],
      "kibana/public": ["./src/client/kibana/src/core/public"],
      "kibana/server": ["./src/client/kibana/src/core/server"],
      "@kbn/i18n": ["./src/client/mocks/@kbn-i18n"],
      "@kbn/i18n/react": ["./src/client/mocks/@kbn-i18n-react"],
    }
  },
  "exclude" : ["src/**/*.test.ts"]
}
